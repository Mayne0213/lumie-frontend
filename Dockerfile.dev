# Development Dockerfile for Next.js with hot reload
FROM node:20-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache libc6-compat

# Create non-root user
RUN addgroup -g 1001 nodejs && adduser -u 1001 -G nodejs -D nextjs

# Copy package files and npm config
COPY --chown=nextjs:nodejs package.json package-lock.json .npmrc ./

# Install dependencies as root, then fix ownership
RUN npm ci && chown -R nextjs:nodejs /app

# Copy source code (will be synced by Tilt)
COPY --chown=nextjs:nodejs . .

# Create directories for Tilt live_update sync (ensures they exist for new files)
RUN mkdir -p /app/.next /app/components /app/hooks /app/lib && \
    chown -R nextjs:nodejs /app/.next /app/components /app/hooks /app/lib

USER nextjs

EXPOSE 3000

ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV HOSTNAME=0.0.0.0

# Run dev server with hot reload
CMD ["npm", "run", "dev"]
